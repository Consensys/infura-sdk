{
  "name": "@infura/sdk",
  "version": "1.1.0",
  "description": "Infura SDK: easily manage, interact with and read smart contract on Mainnet, testnet and local",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest '/test'",
    "test:integration": "jest --config ./integration-test/config/jest-integration.json --maxWorkers=1 --forceExit",
    "test:e2e": "jest e2e/*",
    "test:coverage": "jest --coverage",
    "prettier:format": "prettier --write \"*.js\" ",
    "prettier:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "generate:changelog": "npx auto-changelog"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConsenSys/infura-sdk.git"
  },
  "author": "Consensys Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ConsenSys/infura-sdk/issues"
  },
  "homepage": "https://github.com/ConsenSys/infura-sdk#readme",
  "keywords": [
    "infura",
    "sdk",
    "ethereum",
    "evm",
    "blockchain",
    "smart contracts",
    "dapps",
    "solidity",
    "nft",
    "web3",
    "tooling"
  ],
  "files": [
    "src/",
    "index.js",
    "usage.js",
    "usage.ipfs.js",
    "jsconfig.json",
    "LICENSE",
    "README.MD"
  ],
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.9",
    "ipfs-http-client": "56.0.3",
    "joi": "^17.6.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/cz-commitlint": "^17.0.3",
    "@faker-js/faker": "^7.5.0",
    "auto-changelog": "^2.4.0",
    "babel-jest": "^28.1.0",
    "babel-plugin-transform-import-meta": "^2.1.1",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "ganache": "^7.3.2",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sonarjs": "^0.2.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
