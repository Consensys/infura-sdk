{
  "name": "@infura/sdk",
  "version": "1.0.2",
  "description": "Infura SDK: easily manage, interact with and read smart contract on Mainnet, testnet and local",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest '/test'",
    "test:integration": "jest --config ./integration-test/config/jest-integration.json --maxWorkers=1",
    "test:coverage": "jest --coverage",
    "prettier:format": "prettier --write \"*.js\" ",
    "prettier:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConsenSys/infura-sdk.git"
  },
  "author": "Consensys Inc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ConsenSys/infura-sdk/issues"
  },
  "homepage": "https://github.com/ConsenSys/infura-sdk#readme",
  "keywords": [
    "infura",
    "sdk",
    "ethereum",
    "evm",
    "blockchain",
    "smart contracts",
    "dapps",
    "solidity",
    "nft",
    "web3",
    "tooling"
  ],
  "files": [
    "src/",
    "index.js",
    "usage.js",
    "jsconfig.json",
    "LICENSE",
    "README.MD"
  ],
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "babel-jest": "^28.1.0",
    "babel-plugin-transform-import-meta": "^2.1.1",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.4.5",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "ganache": "^7.0.0",
    "husky": "^7.0.0",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "sonarjs": "^0.2.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
