{
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.test\\.js$",
    "transform": {
      "^.+\\.(t|j)s$": "esbuild-jest"
    },
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test/"
    ],
    "moduleNameMapper": {
      "^@shared/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    },
    "verbose": true
  }